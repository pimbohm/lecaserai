{% if is_granted('ROLE_ADMIN') %}
<form method="post" action="{{ path('extras_delete', {'id': extra.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ extra.id) }}">
    <button class="btn">Delete</button>
</form>
{% else %}
    <h1>Geen toegang</h1>
{% endif %}