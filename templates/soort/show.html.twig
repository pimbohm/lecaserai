{% extends 'base.html.twig' %}

{% block title %}Soort{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
    <h1>Soort</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ soort.id }}</td>
            </tr>
            <tr>
                <th>Omschrijving</th>
                <td>{{ soort.omschrijving }}</td>
            </tr>
            <tr>
                <th>Meerprijs</th>
                <td>{{ soort.meerprijs }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('soort_index') }}">back to list</a>

    <a href="{{ path('soort_edit', {'id': soort.id}) }}">edit</a>

    {{ include('soort/_delete_form.html.twig') }}
    {% else %}
        <h1>Geen toegang</h1>
    {% endif %}
{% endblock %}
